{
  "name": "streamstore",
  "version": "0.0.0",
  "description": "Stream Store implementation for Node.",
  "author": "Jeff Hansen",
  "license": "MIT",
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist/ && tsc -p tsconfig.build.json",
    "test": "NODE_ENV=test npm run setup-db && NODE_ENV=test jest",
    "cover": "npm run test -- --coverage",
    "lint": "tslint --project tsconfig.json --fix 'src/**/*.ts' && tsc --noEmit --pretty --project tsconfig.json && prettier --write \"**/*.ts\"",
    "setup-db": "ts-node src/__helpers__/setup-db.ts",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "big-integer": "^1.6.43",
    "fejl": "^2.1.0",
    "pg": "^7.11.0",
    "pg-format": "^1.0.4",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-compress": "^2.0.9",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.129",
    "@types/ms": "^0.7.30",
    "@types/node": "^12.0.2",
    "@types/pg": "^7.4.14",
    "@types/pg-format": "^1.0.0",
    "@types/prettier": "^1.16.4",
    "@types/promise-retry": "^1.1.3",
    "@types/rimraf": "^2.0.2",
    "@types/uuid": "^3.4.4",
    "@types/uuid-validate": "^0.0.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "lodash": "^4.17.11",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "smid": "^0.1.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-consistent-codestyle": "^1.15.1",
    "type-zoo": "^3.3.0",
    "typescript": "^3.4.5",
    "uuid": "^3.3.2",
    "yenv": "^2.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    }
  },
  "jest": {
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "__helpers__",
      "src/bin"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
