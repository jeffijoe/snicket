{
  "name": "snicket",
  "version": "0.0.1",
  "description": "Stream Store implementation for Node.JS.",
  "author": "Jeff Hansen",
  "license": "MIT",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "lib",
    "bin",
    "LICENSE.md",
    "README.md"
  ],
  "bin": {
    "snicket-pg": "./bin/snicket-pg"
  },
  "scripts": {
    "build": "rimraf lib/ && tsc -p tsconfig.build.json",
    "test": "NODE_ENV=test npm run setup-db && NODE_ENV=test jest",
    "cover": "npm run test -- --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint --project tsconfig.json --format verbose --fix 'src/**/*.ts' && tsc --noEmit --pretty --project tsconfig.json && prettier --write \"{src,examples}/**/*.ts\"",
    "setup-db": "ts-node src/__helpers__/setup-db.ts",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "big-integer": "^1.6.44",
    "fejl": "^2.3.2",
    "pg-format": "^1.0.4",
    "uuid": "^8.3.1",
    "uuid-validate": "^0.0.3"
  },
  "peerDependencies": {
    "pg": "^7.11.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/ms": "^0.7.30",
    "@types/node": "^14.14.8",
    "@types/pg": "^7.14.7",
    "@types/pg-format": "^1.0.1",
    "@types/uuid": "^8.3.0",
    "@types/uuid-validate": "^0.0.1",
    "coveralls": "^3.0.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "lodash": "^4.17.20",
    "ms": "^2.1.2",
    "pg": "^8.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.2.3",
    "smid": "^0.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "examples/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    }
  },
  "babel": {
    "compact": true
  },
  "jest": {
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist"
    ],
    "transformIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "__helpers__",
      "src/bin"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffijoe/snicket.git"
  }
}
