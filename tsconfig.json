{
  "compileOnSave": false,
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016"]
  }
}
